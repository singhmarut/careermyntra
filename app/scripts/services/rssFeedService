'use strict';

angular.module('pupilsboardApp')
    .factory('Auth', function Auth($location, $rootScope, Session, User, $cookieStore) {

        return $resource('/api/users/:id', {
            id: '@id'
        }, { //parameters default
            update: {
                method: 'PUT',
                params: {}
            },
            get: {
                method: 'GET',
                params: {
                    id:'me'
                }
            }
        });
});